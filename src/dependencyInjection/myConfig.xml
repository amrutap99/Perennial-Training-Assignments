	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="myBeanA" class="dependencyInjection.A">
		<constructor-arg ref="myBeanB"></constructor-arg>
		<property name="b" ref="myBeanB"></property> <!-- see property naming convention in A class -->
