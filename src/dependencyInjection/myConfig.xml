	<bean id="myBeanA1" class="dependencyInjection.A"> <!-- calls default constructor
	getting that line ="A created with default constructor" after setB() is because of this bean on console
	Run and check-->

	</bean>

	  <bean id="myBeanA2" class="dependencyInjection.A"
		scope="prototype">    

	</bean>

	

	<bean id="myBeanB" class="dependencyInjection.B">
	</bean>

</beans>
